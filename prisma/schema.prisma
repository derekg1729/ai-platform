// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  agents    Agent[]
}

model Model {
  id          String   @id
  name        String
  description String
  version     String
  category    String
  capabilities String[] // Stored as array of strings
  apiSpec     Json     // Stored as JSON
  pricing     Json     // Stored as JSON
  stats       Json     // Stored as JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  agents      Agent[]
}

model Agent {
  id        String   @id @default(cuid())
  name      String
  status    String
  modelId   String
  userId    String
  metrics   Json?    // Stored as JSON
  config    Json     // Stored as JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  model     Model    @relation(fields: [modelId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([modelId])
} 